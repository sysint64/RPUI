{
    "name": "sim",
    "authors": [
        "Andrey Kabylin"
    ],
    "description": "Simulator",
    "copyright": "Copyright Â© 2016 - 2018, Andrey Kabylin",
    "license": "MIT",
    "libs-posix": ["ftgl", "glu"],
    "libs-windows": ["ftgl", "glu32"],
    "versions": [
        "SFMLFont",
        "DerelictGL3_CustomFreeFuncs"
    ],
    "targetType": "executable",
    "targetPath": "build",
    "configurations": [
        {
            "name": "executable"
        },
        {
            "name": "unittest",
            "targetType": "executable",
            "preBuildCommands": ["dub run unit-threaded -c gen_ut_main -- -f build/ut.d"],
            "mainSourceFile": "build/ut.d",
            "excludedSourceFiles": ["src/main.d"],
            "buildRequirements": ["silenceDeprecations"],
            "dependencies": {
                "unit-threaded": "*"
            }
        }
    ],
    "dependencies": {
        "derelict-sfml2": "~>4.0.0-beta.2",
        "derelict-gl3": "~>2.0.0-beta.6",
        "derelict-ft": "~>2.0.0-beta.4",
        "gl3n": "~>1.3.1",
        "x11": "~>1.0.20",
        "emsi_containers": "~>0.5.3",
        "accessors": "~>1.1.1",
        "d-unit": "~>0.8.1",
        ":rpdl": "*"
    },
    "-ddoxFilterArgs": [
        "--min-protection=Public",
        "--ex=ftgl",
        "--ex=glu",
        "--ex=x11_cursorfont",
        "--ex=editor",
        "--ex=ui.widgets.panel.split",
        "--ex=ui.widgets.panel.header",
        "--ex=ui.widgets.panel.scroll_button",
        "--ex=gapi",
        "--ex=containers",
        "--ex=math",
        "--ex=patterns",
        "--ex=test"
    ],
    "subPackages": [
        "./rpdl/"
    ]
}
